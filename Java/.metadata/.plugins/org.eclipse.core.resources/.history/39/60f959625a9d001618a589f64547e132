package dbos;

public class PratoCliente {
	private int codPratoCliente, codCliente, codPrato;

	public PratoCliente(int codPratoCliente, int codCliente, int codPrato) {
		super();
		this.codPratoCliente = codPratoCliente;
		this.codCliente = codCliente;
		this.codPrato = codPrato;
	}

	/**
	 * @return the codPratoCliente
	 */
	public int getCodPratoCliente() {
		return codPratoCliente;
	}

	/**
	 * @param codPratoCliente the codPratoCliente to set
	 */
	public void setCodPratoCliente(int codPratoCliente) throws Exception{
		if (codPratoCliente <= 0)
			throw new Exception ("Código PratoCliente inválido");
		
		this.codPratoCliente = codPratoCliente;
	}

	/**
	 * @return the codCliente
	 */
	public int getCodCliente() {
		return codCliente;
	}

	/**
	 * @param codCliente the codCliente to set
	 */
	public void setCodCliente(int codCliente) throws Exception{
		if (codCliente <= 0)
			throw new Exception ("Código de Cliente inválido");
		
		this.codCliente = codCliente;
	}

	/**
	 * @return the codPrato
	 */
	public int getCodPrato() {
		return codPrato;
	}

	/**
	 * @param codPrato the codPrato to set
	 */
	public void setCodPrato(int codPrato) throws Exception{
		if (codPrato <= 0)
			throw new Exception ("Código de prato inválido");
		
		this.codPrato = codPrato;
	}

	/* (non-Javadoc)
	 * @see java.lang.Object#hashCode()
	 */
	public int hashCode() {
		final int prime = 31;
		int result = 666;
		result = prime * result + (new Integer(codCliente)).hashCode();
		result = prime * result + (new Integer(codPrato)).hashCode();
		result = prime * result + (new Integer(codPratoCliente)).hashCode();
		return result;
	}

	/* (non-Javadoc)
	 * @see java.lang.Object#equals(java.lang.Object)
	 */
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		PratoCliente other = (PratoCliente) obj;
		if (codCliente != other.codCliente)
			return false;
		if (codPrato != other.codPrato)
			return false;
		if (codPratoCliente != other.codPratoCliente)
			return false;
		return true;
	}
	
	
	
}
