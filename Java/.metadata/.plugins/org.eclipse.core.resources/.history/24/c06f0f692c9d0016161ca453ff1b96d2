package daos;

import java.sql.*;
import banco.de.dados.*;
import Core.*;
import dbos.*;

public class Mesas {
	public boolean cadastrado (int codigo) throws Exception
	{
	    boolean retorno = false;
	
	    try
	    {
	        String sql;
	
	        sql = "SELECT * FROM Mesa WHERE codMesas=?";
	
	        DAOs.getBD().prepareStatement (sql);
	
	        DAOs.getBD().setInt (1, codigo);
	
	        MeuResultSet resultado = (MeuResultSet)DAOs.getBD().executeQuery ();
	
	        retorno = resultado.first();
	    }
	    catch (SQLException erro)
	    {
	        throw new Exception ("Erro ao procurar mesa");
	    }
	
	    return retorno;
	}
	
    public void alterar (Mesa mesa) throws Exception
    {
        if (livro==null)
            throw new Exception ("Mesa não fornecida");

        if (!cadastrado (livro.getCodigo()))
            throw new Exception ("Nao cadastrado");

        try
        {
            String sql;

            sql = "UPDATE LIVROS " +
                  "SET NOME=? " +
                  "SET PRECO=? " +
                  "WHERE CODIGO = ?";

            DAOs.getBD().prepareStatement (sql);

            DAOs.getBD().setString (1, livro.getNome ());
            DAOs.getBD().setFloat  (2, livro.getPreco ());
            DAOs.getBD().setInt    (3, livro.getCodigo ());

            DAOs.getBD().executeUpdate ();
        }
        catch (SQLException erro)
        {
            throw new Exception ("Erro ao atualizar dados de livro");
        }
    }
}
